	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default variables if not already set",
					"if (!pm.collectionVariables.get('base_url')) {",
					"    pm.collectionVariables.set('base_url', 'http://localhost:8000/api');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Log response for debugging",
					"console.log('Response:', pm.response.text());",
					"",
					"// Set common response handlers",
					"if (pm.response.code === 401) {",
					"    console.log('Authentication required - please login first');",
					"} else if (pm.response.code >= 400) {",
					"    console.log('Request failed with status:', pm.response.code);",
