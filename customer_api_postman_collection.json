				{
					"name": "Create Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('tracking_number', response.tracking_number);",
									"    console.log('Order created with tracking number:', response.tracking_number);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"package\": {\n    \"description\": \"Electronics - Laptop\",\n    \"weight\": 2.5,\n    \"dimensions\": \"35x25x5\",\n    \"package_type\": \"parcel\",\n    \"value\": 50000,\n    \"special_instructions\": \"Handle with care - Fragile\"\n  },\n  \"delivery\": {\n    \"pickup_address\": \"Westlands, Nairobi\",\n    \"delivery_address\": \"Karen, Nairobi\",\n    \"estimated_pickup\": \"2025-12-13T10:00:00Z\",\n    \"estimated_delivery\": \"2025-12-13T16:00:00Z\",\n    \"priority\": 2\n  },\n  \"payment\": {\n    \"amount\": 250.00,\n    \"payment_method\": \"cash\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/customer/portal/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"customer/portal/"
							]
						},
						"description": "Create a new delivery order (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Track Order",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    console.log('Order status:', response.status);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/customer/track/?tracking_number={{tracking_number}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"customer/track/"
							],
							"query": [
								{
									"key": "tracking_number",
									"value": "{{tracking_number}}"
								}
							]
						},
						"description": "Track order by tracking number (public endpoint)"
					},
					"response": []
				}
			],
			"description": "Customer-specific endpoints for registration, portal access, order creation and tracking"
		},
